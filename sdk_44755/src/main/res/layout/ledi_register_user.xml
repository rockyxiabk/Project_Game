<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="304dp"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="15dp" >

    <LinearLayout
        android:id="@+id/load_linear02"
        android:layout_width="fill_parent"
        android:layout_height="216dp"
        android:background="@drawable/ledi_bg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/ledi_regist_remain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#f30000"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="42dp"
            android:background="@drawable/ledi_user_edit_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageSwitcher
                android:layout_width="11dp"
                android:layout_height="18dp"
                android:layout_marginLeft="12dp"
                android:layout_weight="1"
                android:background="@drawable/ledi_login_user_name_edit" />

            <EditText
                android:id="@+id/register_name_edit"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="11dp"
                android:layout_weight="24"
                android:background="@null"
                android:hint="@string/ledi_input_account"
                android:paddingRight="10dp"
                android:textColorHint="@color/float_window_hint_grey"
                
                android:textSize="12sp" />

            
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="42dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/ledi_user_edit_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageSwitcher
                android:layout_width="12dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                android:layout_weight="1"
                android:background="@drawable/ledi_login_user_password_edit" />

            <EditText
                android:id="@+id/register_password_edit"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="11dp"
                android:layout_weight="24"
                android:background="@null"
                android:hint="@string/ledi_input_password"
                android:inputType="textPassword"
                android:paddingRight="10dp"
                android:password="true"
                android:textColorHint="@color/float_window_hint_grey"
                android:textSize="12sp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/RelativeLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_marginRight="2dp"
            android:gravity="center_vertical" >

            <CheckBox
                android:id="@+id/landing_remember_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:drawablePadding="5dp"
                android:paddingLeft="0dp"
                android:button="@null"
				android:drawableLeft="@drawable/ledi_remember_password_bg"
                android:checked="true"
                android:text="@string/ledi_remember_xiyi"
                android:textColor="#555555"
                android:textSize="12sp" />
              
			<TextView
                android:id="@+id/landing_getback_xieyi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/landing_remember_password"
                android:layout_toRightOf="@id/landing_remember_password"
                android:text="@string/ledi_getback_password"
                android:textColor="#FF9200"
                android:textSize="12sp" />

			<TextView
			    android:id="@+id/landing_phone_zhuche"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_alignParentRight="true"
			    android:layout_alignParentTop="true"
			    android:text="@string/ledi_phone_zhuche"
			    android:textColor="#FF9200"
			    android:textSize="12sp" />

        </RelativeLayout>
        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >
<!--
            <TextView
                android:id="@+id/register_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:text="@string/ledi_register_remind"
                android:textColor="#000"
                android:textSize="12sp" />
  -->
            <Button
                android:id="@+id/register_btn"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_gravity="center"
                android:background="@drawable/ledi_login_retreve_sure"
                
                 />
        </FrameLayout>
    </LinearLayout>

</LinearLayout>