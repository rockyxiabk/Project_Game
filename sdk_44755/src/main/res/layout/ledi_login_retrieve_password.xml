<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="320dp"
    android:background="@drawable/ledi_login_retrieve_bg"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/ledi_identify_back"
        android:layout_width="304dp"
        android:layout_height="39dp"
        android:src="@drawable/ledi_login_retreve_back" />

    <LinearLayout
        android:id="@+id/load_linear02"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="13dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="42dp"
            android:background="@drawable/ledi_user_edit_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageSwitcher
                android:layout_width="12dp"
                android:layout_height="18dp"
                android:layout_marginLeft="12dp"
                android:layout_weight="1"
                android:background="@drawable/ledi_login_user_name_edit" />

            <EditText
                android:id="@+id/ledi_identify_username_input_et"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="11dp"
                android:layout_weight="24"
                android:background="@null"
                android:hint="@string/ledi_input_account"
                android:paddingRight="10dp"
                android:textColorHint="@color/float_window_hint_grey"
                android:textSize="12sp" />
            
        </LinearLayout>

        <LinearLayout
            android:layout_width="274.5dp"
            android:layout_height="42dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/ledi_user_edit_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageSwitcher
                android:layout_width="14dp"
                android:layout_height="22dp"
                android:layout_marginLeft="12dp"
                android:background="@drawable/ledi_register_phone_img1" />

            <EditText
                android:id="@+id/ledi_identify_get_et"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="11dp"
                android:background="@null"
                android:hint="@string/ledi_input_phone_number"
                android:inputType="phone|number"
                android:maxLength="11"
                android:paddingRight="10dp"
                android:textColorHint="@color/float_window_hint_grey"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="274.5dp"
        android:layout_height="42dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="8.5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="167dp"
            android:layout_height="42dp"
            android:background="@drawable/ledi_user_edit_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageSwitcher
                android:layout_width="16dp"
                android:layout_height="20dp"
                android:layout_marginLeft="12dp"
                android:background="@drawable/ledi_register_phone_img" />

            <EditText
                android:id="@+id/ledi_identify_input_et"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_marginLeft="11dp"
                android:background="@null"
                android:hint="@string/ledi_input_identify_code"
                android:inputType="phone|number"
                android:maxLength="11"
                android:paddingRight="10dp"
                android:textColorHint="@color/float_window_hint_grey"
                android:textSize="12sp" />
        </LinearLayout>

        <Button
            android:id="@+id/ledi_identify_get_btn"
            android:layout_width="102dp"
            android:layout_height="40dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="0dp"
            android:background="@drawable/ledi_login_selector"
            android:text="@string/ledi_identify_getStr"
            android:textColor="#FFFFFFFF"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="42dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/ledi_user_edit_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageSwitcher
            android:layout_width="12dp"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:background="@drawable/ledi_login_user_password_edit" />

        <EditText
            android:id="@+id/register_password_edit"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="11dp"
            android:layout_weight="24"
            android:background="@null"
            android:hint="@string/ledi_input_password"
            android:inputType="textPassword"
            android:paddingRight="10dp"
            android:password="true"
            android:textColorHint="@color/float_window_hint_grey"
            android:textSize="12sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:orientation="vertical" >

        <Button
            android:id="@+id/ledi_identify_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/ledi_login_retreve_sure2"
             />
    </LinearLayout>

</LinearLayout>