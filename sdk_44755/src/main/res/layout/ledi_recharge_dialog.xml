<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:background="@drawable/ledi_rech_bg" >

        <RelativeLayout
            android:id="@+id/ledi_rechar_dialog_rel1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/ledi_recharge_dialog_img"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/ledi_recharge_dialog_dcn_suo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:text="@string/ledi_anquanzhifu"
                android:textSize="22sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:background="@drawable/ledi_recharge_dialog_dcn_xian" >

            <ImageView
                android:id="@+id/ledi_anim_img"
                style="@style/ledi_dialog_anim"
                android:layout_width="5dp"
                android:layout_height="fill_parent"
                android:src="@drawable/ledi_recharge_dialog_dian" />
        </RelativeLayout>
    </RelativeLayout>

</FrameLayout>