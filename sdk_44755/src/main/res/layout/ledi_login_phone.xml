<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF8D7"
    android:orientation="vertical" >
     <TextView
         android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="绑定手机号"
        android:textColor="#FF2D2D"
        android:textSize="20sp" />
	 <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="7dp"
        android:text="绑定手机号可用于找回密码，修改密码等功能"
        android:textSize="13sp" />

    <EditText
        android:id="@+id/pay_realname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp"
        android:textSize="13sp"
        android:hint="请输入手机号码" />
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <Button
                android:id="@+id/btn_quit"
                android:layout_width="80dp"
                android:layout_height="38dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/ledi_quti_btn_bg"
                android:onClick="quit_btn_click"
                android:text="取消"
                android:textColor="#fff"
                android:layout_weight="1"
                android:textSize="15sp" />
          <Button
                android:id="@+id/btn_sure"
                 android:layout_width="80dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/ledi_quit_forum_bg"
                android:onClick="quit_btn_click"
                android:text="确定"
                android:textColor="#fff"
                android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>
