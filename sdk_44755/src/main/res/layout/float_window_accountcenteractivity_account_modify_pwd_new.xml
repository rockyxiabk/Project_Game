<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="@color/float_window_grey"
    android:orientation="vertical" >
      <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/float_window_activity_title" />

    <include
        android:id="@+id/float_window_balance_include"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/float_window_activity_balance"
        android:background="#ffffff"
        android:gravity="center"
        android:layout_marginTop="16dp" />
    <include android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/float_window_accountcenteractivity_account_modify_pwd"
        android:background="#ffffff"
        android:gravity="center"/>

</LinearLayout>
