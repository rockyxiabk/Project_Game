<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="304dp"
    android:layout_height="wrap_content"
    android:background="@drawable/ledi_login_selector"
    android:orientation="vertical" >

    <!-- android:background="@drawable/ledi_login_retrieve_bg" -->

    <ImageView
        android:id="@+id/realname_back"
        android:layout_width="304dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ledi_login_realname_title" />

    <LinearLayout
        android:layout_width="304dp"
        android:layout_height="245dp"
        android:background="@drawable/ledi_bg"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:layout_width="248dp"
                android:layout_height="65dp"
                android:text="@string/float_window_realname"
                android:textColor="#585858"
                android:textSize="11dp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageSwitcher
                    android:layout_width="13dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/ledi_login_user_name_edit" />

                <EditText
                    android:id="@+id/pay_realname"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="24"
                    android:background="@null"
                    android:hint="@string/float_window_realname_name"
                    android:paddingRight="10dp"
                    android:textColorHint="@color/float_window_hint_grey"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#CBCBCB" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageSwitcher
                    android:layout_width="15dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/ledi_realname_shenfenzheng" />

                <EditText
                    android:id="@+id/pay_realname2"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="24"
                    android:background="@null"
                    android:hint="@string/float_window_realname_name2"
                    android:paddingRight="10dp"
                    android:textColorHint="@color/float_window_hint_grey"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/realname_look"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/pay_realname_no"
                    android:layout_width="110dp"
                    android:layout_height="39dp"
                    android:layout_weight="1"
                    android:background="@drawable/ledi_login_realname_quxiao" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="left"
                    android:layout_weight="2"
                    android:background="@null" />

                <Button
                    android:id="@+id/pay_realname_yes"
                    android:layout_width="110dp"
                    android:layout_height="39dp"
                    android:layout_weight="1"
                    android:background="@drawable/ledi_login_realname_sure" />
            </LinearLayout>

            <Button
                android:id="@+id/pay_realname_yes2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/ledi_login_selector"
                android:gravity="center"
                android:text="确定"
                android:textColor="#ffffff"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>