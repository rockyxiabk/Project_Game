<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="304dp"
    android:layout_height="310dp"
    android:background="@drawable/ledi_login_retrieve_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/bind_phone_title"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        
        android:src="@drawable/ledi_login_bind_phone" />

   <LinearLayout
            android:layout_marginTop="18.5dp"
            android:layout_width="274.5dp"
            android:layout_height="42dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical"
            android:background="@drawable/ledi_user_edit_bg"
            android:orientation="horizontal" >
            <ImageSwitcher 
                    android:layout_width="14dp"
                    android:layout_height="22dp"
                    android:layout_marginLeft="12dp"
                    
                    android:background="@drawable/ledi_register_phone_img1"/>
                <EditText
                    android:id="@+id/phone_name_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    
                    android:layout_marginLeft="11dp"
                    android:background="@null"
                    android:hint="@string/ledi_input_phone_number"
                    android:paddingRight="10dp"
                    android:textColorHint="@color/float_window_hint_grey"
                    android:inputType="phone|number"  
           			android:maxLength="11" 
                    android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="8.5dp"
            android:layout_width="274.5dp"
            android:layout_height="42dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >
        <LinearLayout
            android:layout_width="167dp"
            android:layout_height="42dp"
            android:gravity="center_vertical"
            android:background="@drawable/ledi_user_edit_bg"
            android:orientation="horizontal" >
                 <ImageSwitcher 
                    android:layout_width="16dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/ledi_register_phone_img"/>
                <EditText
                    android:id="@+id/phone_name_edit_pass"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:layout_marginLeft="11dp"
                    android:background="@null"
                    android:hint="@string/ledi_input_identify_code"
                    android:paddingRight="10dp"
                    android:textColorHint="@color/float_window_hint_grey"
                    android:inputType="phone|number"  
           			android:maxLength="11" 
                    android:textSize="12sp" />
                
            </LinearLayout>
            <Button
                android:id="@+id/bind_phone_yanzheng"
                android:layout_width="102dp"
                android:layout_height="40dp"
                android:layout_marginLeft="4dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/ledi_login_selector"
                android:text="@string/ledi_identify_getStr"
                android:textColor="#FFFFFFFF"
                android:textSize="12sp" />
            </LinearLayout>

        <Button
            android:id="@+id/bind_phone_sure"
            android:layout_width="272dp"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/ledi_login_selector"
            android:text="立即绑定"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal" >
 			<ImageView
                android:id="@+id/img_laba"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ledi_laba" />
 			<TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="温馨提示："
                android:textColor="#FF9200"
                android:textSize="12sp" />
 			</LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
            android:layout_marginRight="21dp"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="@string/ledi_login_bindphone1"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="@string/ledi_login_bindphone2"
                    android:textSize="12sp" />
            </LinearLayout>

            

        

</LinearLayout>